<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Servlet Demos</display-name>
  <filter>
    <filter-name>MyFilter</filter-name>
    <filter-class>demos.jee.servlets.Filters</filter-class>
    <init-param>
      <param-name>city</param-name>
      <param-value>New York</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>MyFilter</filter-name>
    <url-pattern>/MySimpleServlet</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Simple</servlet-name>
    <servlet-class>demos.jee.servlets.SimpleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Cookies</servlet-name>
    <servlet-class>demos.jee.servlets.MyCookies</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Rewrite</servlet-name>
    <servlet-class>demos.jee.servlets.URL_Rewriting</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HelloWorld</servlet-name>
    <servlet-class>demos.jee.servlets.HelloWorld</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GoodbyeWorld</servlet-name>
    <servlet-class>demos.jee.servlets.GoodbyeWorld</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Simple</servlet-name>
    <url-pattern>/MySimpleServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Simple</servlet-name>
    <url-pattern>/xyz</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Rewrite</servlet-name>
    <url-pattern>/rewrite</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelloWorld</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoodbyeWorld</servlet-name>
    <url-pattern>/goodbye</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Cookies</servlet-name>
    <url-pattern>/cookies</url-pattern>
  </servlet-mapping>
</web-app>
